extends layout 

block content 
    h1= title 

    form(method='POST' action='')
        div.form-group
            label(for='genre') Genre: 
            input#genre.form-control(type='text' placeholder='Genre' name='name' required='true' value=(undefined===genre ? '': genre.name))
        div.form-group
            label(for='poster') Poster:
            input#poster.form-control(type='text' placeholder='Poster' name='poster' required='true' value=(undefined===genre ? '': genre.poster))
        button.btn.btn-primary(type='submit') Submit 

    if errors 
        ul 
            for error in errors 
                li != error.msg